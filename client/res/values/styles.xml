<resources>

    <style name="AppTheme" parent="Theme.suseconferences" />

<style name="RoundBox">
        <item name="android:layout_marginLeft">5dip</item>
         <item name="android:layout_marginRight">5dip</item>
         <item name="android:layout_marginTop">5dip</item>
         <item name="android:background">@drawable/round_box</item>
</style>

<style name="BoxFill">
            <item name="android:layout_marginLeft">1dip</item>
         <item name="android:layout_marginRight">1dip</item>
         <item name="android:layout_marginTop">1dip</item>
         <item name="android:background">@drawable/box_fill</item>
</style>

  
    <style name="PlainDialogTitleBar">
    	<item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/rounded_dialog_title</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:paddingLeft">5dip</item>
    </style>

<style name="PlainDialog" parent="android:Theme.Dialog">
     	<item name="android:windowTitleSize">80dip</item>
<!--      	 <item name="android:spinnerStyle">@style/PortedSpinner</item> -->
            <item name="android:windowTitleStyle">@style/PlainDialogTitleBar</item>
            <item name="android:windowContentOverlay">@null</item>
            <item name="android:windowCloseOnTouchOutside">true</item>
			<item name="android:windowBackground">@drawable/round_dialog</item>
			<item name="android:windowTitleBackgroundStyle">@android:color/transparent</item>
    <item name="android:textColor">#000000</item>
</style> 
</resources>