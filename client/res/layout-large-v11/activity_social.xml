    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffffff"
        android:padding="20dip" >

        <!--  This is useful for dividing the layout in half while the fragments load -->
        <View
            android:id="@+id/horizontalLineView"
            android:layout_width="2dip"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:background="#ffffff" />

        <FrameLayout
            android:id="@+id/twitterFrame"
            android:background="@drawable/fragment_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/twitterTitle"
            android:layout_toLeftOf="@+id/horizontalLineView" >

            <fragment
                android:id="@+id/twitterFragment"
                android:name="de.suse.conferenceclient.fragments.TwitterFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>

        <TextView
            android:id="@+id/twitterTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:text="@string/twitter"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/dark_suse_green" />

        <TextView
            android:id="@+id/gPlusTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:text="@string/googlePlus"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/dark_suse_green" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/fragment_box"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/twitterFrame"
            android:layout_toRightOf="@+id/horizontalLineView" >

            <fragment
                android:id="@+id/gPlusFragment"
                android:name="de.suse.conferenceclient.fragments.GooglePlusFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </FrameLayout>

    </RelativeLayout>
