<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:background="#ffffff"
    android:layout_height="fill_parent" >

    <TextView
        android:id="@+id/conferenceNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="20dip"
        android:text="SUSECon 2012"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/dark_suse_green" />

    <TextView
        android:id="@+id/locationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/conferenceNameTextView"
        android:paddingLeft="20dip"
        android:text="Orlando, FL"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/bright_suse_green" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/locationTextView"
        android:orientation="vertical" >
            >

        <TextView
            android:id="@+id/newsFeedTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/newsFeed"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <fragment
                android:id="@+id/newsFeedFragment"
                android:name="de.suse.conferenceclient.fragments.NewsFeedFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>
    </LinearLayout>

    <de.suse.conferenceclient.views.WheelView
        android:id="@+id/wheelView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center" />

    <ImageView
        android:id="@+id/logoView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/logo" />

    <ImageButton
        android:id="@+id/mapButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@null"
        android:paddingRight="20dip"
        android:paddingTop="20dip"
        android:src="@drawable/maps" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"        
  		android:paddingRight="20dip"
		android:paddingBottom="20dip"
        android:gravity="right"
        android:orientation="vertical" >
        
        <TextView
            android:id="@+id/myScheduleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/upcoming"
           android:paddingBottom="10dip"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/dark_suse_green"
            android:textStyle="bold" />
        <View
            android:id="@+id/horizontalLineView"
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:paddingBottom="20dip"
            android:background="@color/dark_suse_green" />
        
		<LinearLayout android:layout_width="wrap_content"
		       android:layout_height="wrap_content"		       
		       android:orientation="vertical"
		       android:paddingTop="20dip"
		       android:paddingRight="20dip"
		       android:id="@+id/whatsOnLayout">
		</LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/wheelView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="3dp"
        android:src="@drawable/wheel_arrow" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wheelView"
        android:layout_centerHorizontal="true"
        android:src="@drawable/wheel_shadow" />

</RelativeLayout>